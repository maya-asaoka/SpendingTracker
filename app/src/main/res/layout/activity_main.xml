<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.yukariasaoka.spendingtracker.MainActivity"
        android:background="@android:color/background_light">

    <Button
            android:text="add entry"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:id="@+id/addEntryButton"
            android:backgroundTint="@color/colorAccent"
            android:background="@android:color/background_light"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" android:layout_marginRight="16dp"
            app:layout_constraintRight_toRightOf="parent"/>
    <Button
            android:text="settings"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:id="@+id/settingsButton"
            android:backgroundTint="@color/colorAccent"
            android:background="@android:color/background_light"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
            android:text="Total: $0.00"
            android:layout_width="368dp"
            android:layout_height="30dp"
            android:id="@+id/totalView"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="60dp" android:textSize="18sp"
            android:layout_marginLeft="32dp" app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="16dp"
            app:layout_constraintRight_toRightOf="parent" app:layout_constraintHorizontal_bias="0.458"/>
    <ListView
            android:layout_width="372dp"
            android:layout_height="420dp"
            app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.571"
            android:id="@+id/entriesList" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="108dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintVertical_bias="0.38" tools:layout_editor_absoluteX="8dp"/>
</android.support.constraint.ConstraintLayout>
