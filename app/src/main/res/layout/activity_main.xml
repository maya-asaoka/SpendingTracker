<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.yukariasaoka.spendingtracker.MainActivity"
        android:background="@android:color/background_light">

    <Button
            android:text="add entry"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:id="@+id/addEntryButton"
            android:backgroundTint="@color/colorAccent"
            android:background="@android:color/background_light"
            android:layout_marginStart="16dp" android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" android:layout_marginRight="16dp"
            app:layout_constraintRight_toRightOf="parent"/>
    <Button
            android:text="settings"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:id="@+id/settingsButton"
            android:backgroundTint="@color/colorAccent"
            android:background="@android:color/background_light"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent"/>
    <ListView
            android:layout_width="379dp"
            android:layout_height="447dp" tools:layout_editor_absoluteY="8dp"
            app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:id="@+id/entriesList" android:padding="16sp"/>
</android.support.constraint.ConstraintLayout>
