<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.yukariasaoka.spendingtracker.SettingsActivity"
        android:backgroundTint="@android:color/background_light">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="368dp"
            android:layout_height="495dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" android:backgroundTint="@android:color/background_light">
        <TextView
                android:text="@string/most_recent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/mostRecent" android:textSize="24sp"
                android:padding="15sp"/>
        <TextView
                android:text="@string/least_recent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/leastRecent" android:textSize="24sp"
                android:padding="15sp"/>
        <TextView
                android:text="@string/alpha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/alpha" android:textSize="24sp"
                android:padding="15sp"/>
        <TextView
                android:text="@string/add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/addCategory" android:textSize="24sp"
                android:padding="15sp"/>
        <TextView
                android:text="@string/remove"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/removeCategory" android:textSize="24sp"
                android:padding="15sp"/>
        <TextView
                android:text="@string/remove_entry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/removeEntry" android:textSize="24sp"
                android:padding="15sp"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
