<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.yukariasaoka.spendingtracker.SettingsActivity"
        android:backgroundTint="@android:color/background_light">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="368dp"
            android:layout_height="495dp" tools:layout_editor_absoluteY="8dp"
            tools:layout_editor_absoluteX="8dp">
        <TextView
                android:text="Sort By (most recent, default)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/mostRecent" android:textSize="24sp"
                android:padding="15sp"/>
        <TextView
                android:text="Sort By (least recent)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/leastRecent" android:textSize="24sp"
                android:padding="15sp"/>
        <TextView
                android:text="View By Month"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/byMonth" android:padding="15sp"
                android:textSize="24sp"/>
        <TextView
                android:text="Sort Alphabetically"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/alpha" android:textSize="24sp"
                android:padding="15sp"/>
        <TextView
                android:text="View By Category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/byCategory" android:textSize="24sp"
                android:padding="15sp"/>
        <TextView
                android:text="Add/Remove Categories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/editCategories" android:textSize="24sp"
                android:padding="15sp"/>
        <Button
                android:text="confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/confirmButton"
                android:backgroundTint="@color/colorAccent"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
